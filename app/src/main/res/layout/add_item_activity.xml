<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addItem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.AddItemActivity">

    <!-- Top pink-colored bar with "Add item" text -->

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_gravity="center_vertical"
            android:backgroundTint="#FF4081"
            android:src="@android:drawable/ic_menu_revert" />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Add item"
            android:textColor="#FFFFFF"
            android:background="#FF4081"
            android:padding="20dp"
            android:textSize="18sp" />
    </LinearLayout>


    <ImageView
        android:id="@+id/AddItemimageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_launcher_background"
        tools:srcCompat="@tools:sample/avatars" />

    <Spinner
        android:id="@+id/AddItemCategoryspinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:minHeight="40dp" />

    <TextView
        android:id="@+id/titleTextView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="Product Name:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/productNameAddItemEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#57DAD5D5"
        android:ems="10"
        android:hint="Product Name"
        android:inputType="text"
        android:paddingLeft="15dp" />

    <TextView
        android:id="@+id/titleTextView44"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="description:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/descriptionAddItemEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#57DAD5D5"
        android:ems="10"
        android:hint="description"
        android:inputType="text"
        android:paddingLeft="15dp" />

    <TextView
        android:id="@+id/titleTextViewPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="Price:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/priceAddItemEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#57DAD5D5"
        android:ems="10"
        android:hint="Enter Price"
        android:inputType="numberDecimal"
        android:paddingLeft="15dp" />

    <Button
        android:id="@+id/addItemButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="160dp"
        android:backgroundTint="#FF4081"
        android:text="Add" />


</LinearLayout>
