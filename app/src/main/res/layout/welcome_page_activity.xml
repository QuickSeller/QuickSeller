<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.WelcomePageActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/loginsignupbackground">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@drawable/custum_edittext">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome to Quick Seller"
                android:id="@+id/loginTextView"
                android:textSize="26sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/main_blue"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/finallogo"
                android:layout_marginTop="40dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Already Have An Account?"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/btnWelcomePageLogin"
                android:text="LOG IN"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/main_blue"
                app:cornerRadius="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="SignUp For Free Now!"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/btnWelcomePageSignup"
                android:text="SignUp"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/main_blue"
                app:cornerRadius="20dp"/>



        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>

