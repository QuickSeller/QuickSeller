<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<LinearLayout
    android:id="@+id/profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Activities.ProfileActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:background="#FF4081"
        android:padding="25dp"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:text="QuickSeller" />

        <ImageView
            android:id="@+id/profileImglogoProfile"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/logoooo"
            tools:srcCompat="@tools:sample/avatars" />


    </LinearLayout>


    <Button
        android:id="@+id/ProfileuttonCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="all category"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/categoryphoto"
        />
    <Button
        android:id="@+id/ProfileuttonChangPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="change password"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/baseline_password_24"
        />
    <Button
        android:id="@+id/ProfileuttonTeams"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Teams And Tonditions"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/baseline_pest_control_24"
        />
    <Button
        android:id="@+id/ProfileuttonPrivacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Privacy And Policy"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/baseline_policy_24"
        />
    <Button
        android:id="@+id/ProfileuttonAboutUs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/baseline_question_mark_24"
        />
    <Button
        android:id="@+id/ProfileuttonFaq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FAQ"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/baseline_fiber_manual_record_24"
        />
    <Button
        android:id="@+id/ProfileuttonSignOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Out"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/baseline_logout_24"
        />



</LinearLayout>
</ScrollView>
